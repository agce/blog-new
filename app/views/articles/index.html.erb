<h2>Lista de articulos</h2>
<%= link_to 'Articulo nuevo', new_article_path %>
<% @articles.each do |article| %>
<div>
  <h3><%= article.title %></h3>
  <p><%= article.text %></p>
  <%= link_to 'Ver articulo', article_path(article) %>
  <%= link_to 'Editar', edit_article_path(article) %>
  <%= link_to 'Eliminar', article_path(article),
              method: :delete,
              data: { confirm: 'Estas seguro?' } %>
</div>
<% end %>